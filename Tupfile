# Syntax
# Highlight
# Office
# Word

PROGRAM = SHOW
CXX = g++

CFLAGS = -I headers/
CFLAGS += -g -Wall -Wextra -Wpedantic
CFLAGS += -std=c++17 

!CXX = |> $(CXX) -c -o %o %f $(CFLAGS) |>
!LD = |> $(CXX) -o %o %f $(CFLAGS) |>

: foreach src/*.cpp |> !CXX |> obj/%B.o {OBJS}
: {OBJS} |> !LD |> bin/$(PROGRAM)
