PROGRAM = main.exe
CXX = clang

CFLAGS = -I headers/  
CFLAGS += -O3 -Wall -Wextra -Wpedantic
CFLAGS += -std=c++17 -target x86_64-pc-windows-gnu -fuse-ld=ld

!CXX = |> $(CXX) -c -o %o %f $(CFLAGS) |>
!LD = |> $(CXX) -o %o %f $(CFLAGS) |>

: foreach src/*.cpp |> !CXX |> obj/%B.o {OBJS}
: {OBJS} |> !LD |> bin/$(PROGRAM)
