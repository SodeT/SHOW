# Syntax
# Highlight
# Office
# Word
# AKA SHOW

PROGRAM = SHOW.exe
CXX = g++

CFLAGS = -I headers/
CFLAGS += -O3 -Wall -Wextra -Wpedantic
CFLAGS += -std=c++17 

!CXX = |> $(CXX) -c -o %o %f $(CFLAGS) |>
!LD = |> $(CXX) -o %o %f $(CFLAGS) |>

: foreach src/*.cpp |> !CXX |> obj/%B.o {OBJS}
: {OBJS} |> !LD |> build/$(PROGRAM)
