# Syntax
# Highlight
# Office
# Word

PROGRAM = SHOW.exe
CXX = clang++

CFLAGS = -I headers/ --target=x86_64-pc-windows-gnu
CFLAGS += -ggdb -Wall -Wextra -Wpedantic
CFLAGS += -std=c++17 

!CXX = |> $(CXX) -c -o %o %f $(CFLAGS) |>
!LD = |> $(CXX) -o %o %f $(CFLAGS) |>

: foreach src/*.cpp |> !CXX |> obj/%B.o {OBJS}
: {OBJS} |> !LD |> bin/$(PROGRAM)
